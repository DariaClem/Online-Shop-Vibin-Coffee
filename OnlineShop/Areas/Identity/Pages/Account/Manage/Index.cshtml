@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="formular">
    <partial name="_StatusMessage" for="StatusMessage" />
    <br />
    <div class="h3">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="date2">
        <form class="form" id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Username"></label>
                <input asp-for="Username" disabled />
            </div>
            <div class="email">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" />
            </div>
            <span class="emailConfirmat" asp-validation-for="Input.PhoneNumber"></span>
            <div class="register">
                <button class="butonFinal butonRegister" id="update-profile-button" type="submit"><span></span>Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
