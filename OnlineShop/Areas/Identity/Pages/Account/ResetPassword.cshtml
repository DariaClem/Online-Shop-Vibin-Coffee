@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="formular">
    <div class="date">
        <div class="h1">
            <h1>@ViewData["Title"]</h1>
        </div>
        <form method="post">
            <div class="h2">
                <h2>Reset your password.</h2>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div>
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email"></span>
            </div>
            <div>
                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password"></span>
            </div>
            <div>
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <div class="register">
                <button class="butonFinal butonRegister" id="registerSubmit" type="submit"><span class="finalSpan"></span>Reset</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
